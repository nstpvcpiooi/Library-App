<AnchorPane prefHeight="700.0" prefWidth="950.0" stylesheets="@../../css/searchtab.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Library.ui.User.SearchTabController">
   <children>
      <VBox layoutX="25.0" layoutY="60.0" spacing="12.0" prefWidth="896.0" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="60.0">
         <children>
            <HBox id="SearchBar" fx:id="SearchBar" alignment="CENTER" prefHeight="54.0" prefWidth="896.0">
               <children>
                  <TextField id="SearchText" fx:id="SearchText" onKeyReleased="#search" prefHeight="40.0" prefWidth="823.0" promptText="Bạn muốn đọc sách gì?" />
                  <ImageView fitHeight="22.0" fitWidth="22.0" opacity="0.6" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../icon/search.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
            <VBox id="AdvancedBox" spacing="10.0" prefWidth="896.0">
               <children>
                  <Label text="Tìm kiếm nâng cao" id="AdvancedTitle" />
                  <HBox spacing="10.0">
                     <children>
                        <ComboBox fx:id="categoryField" promptText="Thể loại" prefWidth="200.0" />
                        <TextField fx:id="authorField" promptText="Tác giả" />
                        <ComboBox fx:id="minRatingField" promptText="Rating tối thiểu" prefWidth="150.0" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
      <Button id="back" fx:id="backButton" alignment="CENTER" graphicTextGap="5.0" layoutX="25.0" layoutY="25.0" mnemonicParsing="false" onAction="#BackToHome" prefHeight="30.0" prefWidth="69.0" text="Back">
         <graphic>
            <ImageView fitHeight="13.0" fitWidth="13.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../icon/back-icon.png" />
               </image>
            </ImageView>
         </graphic></Button>
      <ListView id="SearchResult" fx:id="SearchResult" layoutX="25.0" layoutY="220.0" onMouseClicked="#SelectBook" prefHeight="450.0" prefWidth="896.0" AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="230.0" AnchorPane.bottomAnchor="25.0" />
   </children>
