<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="700.0" prefWidth="950.0" stylesheets="@../../css/searchtab.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Library.ui.User.SearchTabController">
   <children>
      <HBox id="SearchBar" fx:id="SearchBar" alignment="CENTER" layoutX="25.0" layoutY="70.0" prefHeight="54.0" prefWidth="896.0">
         <children>
            <TextField id="SearchText" fx:id="SearchText" onKeyReleased="#search" prefHeight="40.0" prefWidth="823.0" promptText="Bạn muốn đọc sách gì?" />
            <ImageView fitHeight="22.0" fitWidth="22.0" opacity="0.6" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../icon/search.png" />
               </image>
            </ImageView>
         </children>
      </HBox>
      <Button id="back" fx:id="backButton" alignment="CENTER" graphicTextGap="5.0" layoutX="25.0" layoutY="25.0" mnemonicParsing="false" onAction="#BackToHome" prefHeight="30.0" prefWidth="69.0" text="Back">
         <graphic>
            <ImageView fitHeight="13.0" fitWidth="13.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../icon/back-icon.png" />
               </image>
            </ImageView>
         </graphic></Button>
      <ListView id="SearchResult" fx:id="SearchResult" layoutX="25.0" layoutY="149.0" prefHeight="554.0" prefWidth="896.0" />
   </children>
</AnchorPane>
